<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/music"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.english.metin_ses.DetayActivity">

    <Button
        android:id="@+id/oynat"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="177dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/play"></Button>

    <SeekBar
        android:id="@+id/seekbarPlay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/oynat"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"></SeekBar>

    <TextView
        android:id="@+id/basla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbarPlay"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:text="00.00.00"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/bitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbarPlay"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="00.00.00"
        android:textColor="#000000"></TextView>



    <Button
        android:id="@+id/like"
        android:layout_width="85dp"
        android:layout_height="65dp"
        android:layout_below="@+id/seekbarPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/favori"></Button>



    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="452dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

</RelativeLayout>
